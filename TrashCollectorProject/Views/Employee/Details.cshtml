@model TrashCollectorProject.Models.CustomerPickupViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Customer Details</h2>
<style>
    #map {
        height: 300px;
        width: 300px;
    }
</style>
<body>
    <div id="map"></div>
    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: -34.397, lng: 150.644},
          zoom: 8
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=FIX&callback=initMap"
            async defer></script>
</body>


<div>
    @Html.HiddenFor(model => model.EmployeeId)
    @Html.ActionLink("Back to Main Page", "Index", "Employee", new { id = Model.EmployeeId, dayChosen = Model.DayChosen }, null)
</div>

